test "VCL: test backend probe syntax"

# Check status definition
varnish v1 -vcl {
	backend b1 {
		.host = "127.0.0.1";
		.probe = {
			.expected_response = 204;
		}
	}
}

# Check url definition
varnish v1 -vcl {
	backend b1 {
		.host = "127.0.0.1";
		.probe = {
			.url = "/";
		}
	}
}

# Check request definition
varnish v1 -vcl {
	backend b1 {
		.host = "127.0.0.1";
		.probe = {
			.request = 
			    "GET / HTTP/1.1"
			    "Host: foo.bar" ;
		}
	}
}

# Check redefinition
varnish v1 -badvcl {
	backend b1 {
		.host = "127.0.0.1";
		.probe = {
			.url = "/";
			.request = 
			    "GET / HTTP/1.1"
			    "Host: foo.bar" ;
		}
	}
}

# Check redefinition the other way
varnish v1 -badvcl {
	backend b1 {
		.host = "127.0.0.1";
		.probe = {
			.request = 
			    "GET / HTTP/1.1"
			    "Host: foo.bar" ;
			.url = "/";
		}
	}
}
